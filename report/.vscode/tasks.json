{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile & Preview PDF",
      "type": "shell",
      "command": "latexmk",
      "args": ["-pdf", "${workspaceFolder:uet-thesis-2025}/report/main.tex"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s*(error|warning)\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
